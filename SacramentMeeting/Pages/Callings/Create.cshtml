@page
@model SacramentMeeting.Pages.Callings.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Calling</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Calling.Title" class="control-label"></label>
                <input asp-for="Calling.Title" class="form-control" />
                <span asp-validation-for="Calling.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calling.Organization" class="control-label"></label>
                <select asp-for="Calling.Organization" class="form-control">
                    @foreach (var item in Model.OrganizationsList)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
</form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
